---
import PortfolioItem from "./PortfolioItem.astro";
import { getLangFromUrl } from '../i18n/utils';
import { getEntry } from 'astro:content';

const lang = getLangFromUrl(Astro.url);
const contentData = await getEntry('portfolio', `${lang}/portfolio`);
---

<section class="flex flex-col items-center pt-20 lg:pt-40 lg:pb-40 xl:pb-60" {...Astro.props}>
  <h3 class="sm:text-4xl text-center text-3xl md:text-3xl lg:text-3xl font-normal pb-8 text-white dark:text-[#88d2fd] xl:text-3xl 2xl:text-4xl">{contentData.data.title}</h3>
  <div 
    class={` 
    grid grid-cols-1 gap-3 text-center pb-16 sm:gap-6 
    lg:grid-cols-2 lg:w-full lg:pb-40 lg:justify-items-center
    xl:grid-cols-3 xl:w-auto xl:pb-40 
    2xl:grid-cols-3 2xl:w-auto 2xl:pb-40 
    `}
  >
    {contentData.data.projects.map((project) => (
      <PortfolioItem
        class="lg:w-[420px] xl:w-auto 2xl:w-auto"
        src={project.image}
        alt={project.title}
        title={project.title}
        description={project.description}
        link={project.link}
      />
    ))}
  </div>

  <h3 class="text-center text-3xl sm:text-4xl md:text-3xl font-normal pb-8 text-white dark:text-[#88d2fd] lg:text-3xl xl:text-3xl 2xl:text-4xl">{contentData.data.title2}</h3>
  <div class="flex flex-col justify-center gap-3 text-center pb-8 sm:gap-6 lg:w-full lg:flex-row xl:w-auto 2xl:w-auto">
    {contentData.data.projects2.map((project) => (
      <PortfolioItem
        class="lg:w-[420px] xl:w-[420px] 2xl:w-auto"
        src={project.image}
        alt={project.title}
        title={project.title}
        description={project.description}
      />
    ))}
  </div>
  <p class="text-center text-xs sm:text-sm md:text-xs lg:text-xs xl:text-xs 2xl:text-sm text-slate-800/90 dark:text-white">{contentData.data.title3}</p>
</section>
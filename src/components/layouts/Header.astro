---
import Navbar from '@/components/features/Navbar.astro';
---

<header
  class={`z-20 fixed top-0 w-full
  `}
>
  <Navbar />

  <!-- Header Mask Blur Effect -->
  <span
    aria-hidden="true"
    class={`
    pointer-events-all header-mask
    absolute left-0 top-0 -z-10 block 
    h-28 w-full overflow-hidden backdrop-blur-md 
    bg-[hsl(202,60%,85%)] bg-opacity-[0.7]
    dark:bg-[hsl(202,85%,15%)] dark:bg-opacity-[0.2]
    xl:h-40
    2xl:h-48
    `}
  >
  </span>
</header>

<style>
  .header-mask {
    -webkit-mask: linear-gradient(180deg, #000, transparent);
    mask: linear-gradient(180deg, #000, transparent);
  }
</style>

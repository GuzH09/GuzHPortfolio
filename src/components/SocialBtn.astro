---
interface Props {
	href: string
  class?: string
}

const { href, class: additionalClasses } = Astro.props
---

<a 
  class={`
  ${additionalClasses} 
  inline-flex justify-center items-center 
  rounded-full dark:border-[#88d2fd]/90 border-[0.2rem] dark:text-[#88d2fd]/90
  dark:hover:bg-[#88d2fd]/90 dark:hover:text-white dark:hover:shadow-[0_0_1rem_rgb(136,210,253,0.9)] 
  transition duration-500
  `}
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
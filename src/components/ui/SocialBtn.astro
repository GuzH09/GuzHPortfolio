---
interface Props {
  href: string;
  class?: string;
}

const { href, class: additionalClasses } = Astro.props;
---

<a
  class={`
  ${additionalClasses} 
  inline-flex justify-center items-center rounded-md border-2 hover:scale-105 transition duration-500
  text-white bg-[hsla(217,33%,17%,1)] border-transparent
  dark:text-white dark:bg-[hsla(0,0%,9%,0.3)] dark:border-[#88d2fd]/50 
  hover:text-[hsla(200,100%,50%,1)]
  dark:hover:text-[#88d2fd] 
  shadow-[0_0_15px_rgb(0,0,0,0.5)] 
  dark:shadow-[0_0_15px_rgb(0,0,0,0.5)] 
  `}
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>

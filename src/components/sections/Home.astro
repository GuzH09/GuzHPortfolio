---
import DownloadBtn from '@/components/ui/DownloadBtn.astro';
import SocialBtn from '@/components/ui/SocialBtn.astro';
import { getLangFromUrl } from '@/i18n/utils';
import { getEntry } from 'astro:content';
import HeroTextSVG from '@/components/features/HeroTextSVG.astro';

const lang = getLangFromUrl(Astro.url);
const contentText = await getEntry('home', `${lang}/home`);
---

<section
  class={`
  background-main 
  flex flex-col justify-center items-center min-h-[100vh]
  `}
  {...Astro.props}
>
  <div class="flex w-full flex-col items-center justify-center">
    <HeroTextSVG
      class={`
      w-10/12
      h-auto mb-4 max-w-[633px]
      sm:h-auto sm:w-full sm:mb-4
      lg:h-auto lg:w-auto
      `}
    />

    <h2
      class={`
      font-normal 
      text-2xl text-center mb-4 dark:text-white text-[hsla(217,33%,17%,1)]
      sm:text-5xl sm:text-center sm:mb-6 
      md:text-5xl md:mb-8 
      lg:text-4xl lg:text-center lg:mb-10 
      xl:text-4xl xl:mb-4
      2xl:text-5xl 2xl:mb-0 2xl:w-full
      `}
    >
      {contentText.data.role}
    </h2>

    <span class="mb-6 w-10/12 border-b border-black/30 dark:border-white/30 lg:my-4 lg:w-1/3"></span>

    <div
      class={`
      w-full 
      flex flex-col justify-center items-center mb-8 
      sm:mb-6 sm:gap-4 
      md:mb-8 
      lg:mb-10 
      xl:flex xl:flex-row xl:justify-center xl:mb-4
      2xl:flex 2xl:flex-col 2xl:justify-center 2xl:gap-4 2xl:mb-4
      `}
    >
      <DownloadBtn
        class="mb-4 text-center sm:mb-0 lg:mr-2 2xl:mr-0 2xl:w-60"
        href="https://drive.google.com/drive/folders/1POMyenoQ7IMq-kBH8vAAEoq95Z7haQZ1?usp=drive_link"
        ariaLabel=`${contentText.data.downloadButton1}`
      >
        {contentText.data.downloadButton1}
      </DownloadBtn>
      <DownloadBtn
        class="text-center lg:mb-0 lg:mr-2 2xl:mr-0 2xl:w-60"
        href="https://drive.google.com/drive/folders/1EnI2hPRdjNz9WhFbekU4uWVIZdPSwtdQ?usp=drive_link"
        ariaLabel=`${contentText.data.downloadButton2}`
      >
        {contentText.data.downloadButton2}
      </DownloadBtn>
    </div>

    <div
      class={`
      flex gap-2 mb-8 
      sm:gap-6 sm:mb-0 
      lg:mb-10 lg:gap-2 
      2xl:w-full 2xl:flex 2xl:flex-row 2xl:justify-center 2xl:gap-4 2xl:items-center
      `}
    >
      <SocialBtn class="size-12 lg:size-12 xl:mr-4 2xl:mr-0" href="https://github.com/GuzH09">
        <i class="fa-brands fa-github text-xl"></i>
      </SocialBtn>
      <SocialBtn class="size-12 lg:mr-4 lg:size-12 2xl:mr-0" href="https://www.linkedin.com/in/hernan-agustin-otero-dev/">
        <i class="fa-brands fa-linkedin-in text-xl"></i>
      </SocialBtn>
    </div>
  </div>
</section>
